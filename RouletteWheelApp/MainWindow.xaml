<Window x:Class="RouletteWheel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Online Roulette Wheel" Height="600" Width="600"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <Canvas x:Name="wheelCanvas" Width="500" Height="500" Background="Transparent"/>
        <Canvas x:Name="pointerCanvas" Width="500" Height="500" Background="Transparent"/>
        <TextBlock x:Name="resultText" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="30" Margin="0,0,0,20"/>
    </Grid>
</Window>
